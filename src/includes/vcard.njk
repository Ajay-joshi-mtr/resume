<div class="h-card">
    {%- set avatarUrl -%}/assets/images/{{ author.avatar }}{% endset %}
    {% if author.avatar %}
        <img class="u-photo" src="{{ avatarUrl | url }}" width="250" alt="{{ author.name }}" />
    {% endif %}

    <h1 class="p-name">{{ author.name }}</h1>
    <p class="p-job-title">{{ author.occupation }}</p>
    <p class="p-locality">{{ author.location }}</p>

    {% if author.pronouns %}
        <p class="p-gender-identity">{{ author.pronouns }}</p>
    {% endif %}

    <div class="p-contact">
        {% if author.contact.email %}
            <a class="u-email" href="mailto:{{ author.contact.email | obfuscate | safe }}">
                {{ author.contact.email | obfuscate | safe }}
            </a>
        {% endif %}
        {% if author.contact.telephone %}
            <a class="p-tel" href="tel:{{ author.contact.telephone | stripSpaces }}">
                {{ author.contact.telephone }}
            </a>
        {% endif %}

        {% for social in author.social %}
            <a href="{{ social.url }}" rel="me">
                {%- set isSocialIcon = true -%}
                {%- icon social.name, isSocialIcon -%}
                <span class="p-nickname">{{- social.user -}}</span>
                <span class="sr-only">on {{ social.name }}</a>
            </a>
        {% endfor %}
    </div>
</div>