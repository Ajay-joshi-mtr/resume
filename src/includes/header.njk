<header class="header" role="banner">
    <div class="container">
        
        <div class="h-card">
            <h1>{{ author.name }}</h1>
            <p>{{ author.occupation }}</p>
            <p>{{ author.location }}</p>

            {%- set avatarUrl -%}/assets/images/{{ author.avatar }}{% endset %}
            <img src="{{ avatarUrl | url }}" width="250" alt="{{ author.name }}" />
        </div>

    </div>
</header>