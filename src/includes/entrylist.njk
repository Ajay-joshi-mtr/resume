{% if entries %}
<ol reversed>
    {% for entry in entries | reverse %}
    <li>
        <time datetime="{{ entry.data.start | dateToFormat("yyyy-MM-dd") }}">
            {{ entry.data.start | dateToFormat("MM/yyyy") }}
            <span>&ndash;</span>
            {% if entry.data.end %}
                {{ entry.data.end | dateToFormat("MM/yyyy") }}
            {% else %}
                Present
            {% endif %}
        </time>
        <p>{{ entry.data.title }}, {{ entry.data.company }}</p>
    </li>
    {% endfor %}
<ol>
{% endif %}